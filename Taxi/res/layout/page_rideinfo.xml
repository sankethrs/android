<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include 
	    android:id="@+id/pageheader"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    layout="@layout/page_info"/>

    <TextView
        android:id="@+id/traveller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pageheader"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Traveller"
        android:textStyle="bold" />

     <RelativeLayout
         android:id="@+id/divider"
         android:layout_width="1dp"
         android:layout_height="50dp"
         android:layout_below="@+id/pageheader"
         android:layout_marginLeft="51dp"
         android:layout_toRightOf="@+id/traveller"
         android:background="#000000" >
     </RelativeLayout>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/traveller"
         android:layout_marginBottom="7dp"
         android:layout_marginLeft="58dp"
         android:layout_toRightOf="@+id/divider"
         android:text="Robert Scoble" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/traveller"
         android:layout_below="@+id/divider"
         android:layout_marginTop="20dp"
         android:text="Contact"
         android:textStyle="bold" />

      <RelativeLayout
          android:id="@+id/divider1"
          android:layout_width="1dp"
          android:layout_height="50dp"
          android:layout_alignLeft="@+id/divider"
          android:layout_below="@+id/divider"
          android:background="#000000" >
      </RelativeLayout>

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/textView2"
          android:layout_alignLeft="@+id/textView1"
          android:text="+91-3133-731-337" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textView2"
          android:layout_below="@+id/divider1"
          android:layout_marginTop="20dp"
          android:text="Car"
          android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/traveller"
            android:layout_below="@+id/divider1"
            android:background="#000000" >
        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/textView3"
            android:text="SUV" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/divider2"
            android:layout_marginTop="20dp"
            android:text="Time"
            android:textStyle="bold" />

         <RelativeLayout
             android:id="@+id/divider3"
             android:layout_width="1dp"
             android:layout_height="50dp"
             android:layout_alignLeft="@+id/divider2"
             android:layout_below="@+id/divider2"
             android:background="#000000" >
         </RelativeLayout>

         <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/textView6"
             android:layout_alignBottom="@+id/textView6"
             android:layout_alignLeft="@+id/divider1"
             android:text="6 pm / Nov 28 / Friday" />

         <TextView
             android:id="@+id/textView8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider3"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="69dp"
             android:text="Drop Point"
             android:textSize="13pt" />

         <TextView
             android:id="@+id/textView9"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView8"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="29dp"
             android:text="UB City, Vittal Mallya Road, Bangalore" />

         <Button
             android:id="@+id/button1"
             android:layout_width="120dp"
             android:layout_height="30dp"
             android:layout_alignLeft="@+id/textView6"
             android:layout_below="@+id/textView9"
             android:layout_marginTop="35dp"
             android:background="@drawable/rounded_green"
             android:text="Ride" />

         <Button
             android:id="@+id/button2"
             android:layout_width="120dp"
             android:layout_height="30dp"
             android:layout_alignBaseline="@+id/button1"
             android:layout_alignBottom="@+id/button1"
             android:layout_alignRight="@+id/textView3"
             android:text="Cancel"
             android:background="@drawable/rounded_red" />

</RelativeLayout>
