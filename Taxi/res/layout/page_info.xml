<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/pageTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:text="Bookmyride"
        android:textStyle="bold" />
    
    <RelativeLayout 
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="#000000"        
        android:layout_toRightOf="@id/pageTitle1"
        android:layout_marginLeft="25dp"></RelativeLayout>

    <TextView
        android:id="@+id/pageTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pageTitle1"
        android:layout_toRightOf="@id/divider"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:text="ride info" />
    
</RelativeLayout>
